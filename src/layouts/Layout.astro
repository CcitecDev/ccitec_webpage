---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="/favicon.svg" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
  		--blue_ccitec: #0D0A33;
  		--yellow_ccitec: #EBCF3D;
	}
	*, *::before,*::after {
  	margin: 0;
  	padding: 0;
  	box-sizing: border-box;
  	list-style: none; /* Combine with other resets */
  	text-decoration: none; /* Combine with other resets */
	}

	input{
		display: none;
	}

	body{
    background-color: var(--blue_ccitec);
	}

	span{
    display: flex;
    align-items: center;
	}

</style>
